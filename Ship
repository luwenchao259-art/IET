package game;

import java.awt.Image;

public class Ship extends Entity {
    private int speed = 5;

    public Ship(int x, int y, Image sprite) {
        super(x, y, sprite);
    }

    public void moveLeft() { x -= speed; }
    public void moveRight() { x += speed; }

    @Override
    public void update() {
        // 玩家飞船更新逻辑
    }
}
